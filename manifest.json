{
	"manifest_version": 3,
	"name": "Twitch Score Collector Extension",
	"description": "Extension to automatically accumulate the points earned by watching your favourite streamers",
	"version": "1.1",
	"action": {
		"default_icon": "images/twTvChestPoints.png"
	},
	"content_scripts": [
		{
			"matches": ["https://www.twitch.tv/*"],
			"js": ["scripts/script.js"]
		}
	],
	"icons": {
		"16": "images/twTvChestPoints16.png",
		"32": "images/twTvChestPoints32.png",
		"48": "images/twTvChestPoints48.png",
		"128": "images/twTvChestPoints128.png"
	}
}
